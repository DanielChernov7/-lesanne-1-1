<UserControl x:Class="Uni1Tools.Views.CurrencyCalculatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="{DynamicResource PagePadding}">
            <TextBlock Text="{DynamicResource CurrencyCalculatorTitle}" Style="{DynamicResource SectionTitleStyle}" />

            <Border Style="{DynamicResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource LabelAmount}" VerticalAlignment="Center" />
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource LabelFrom}" VerticalAlignment="Center" Margin="0,10,0,0" />
                    <ComboBox Grid.Row="1" Grid.Column="1" Margin="0,10,0,0"
                              ItemsSource="{Binding CurrencyOptions}"
                              DisplayMemberPath="Name"
                              SelectedItem="{Binding SelectedFromCurrency}" />

                    <TextBlock Grid.Row="1" Grid.Column="2" Text="{DynamicResource LabelTo}" VerticalAlignment="Center" Margin="0,10,0,0" />
                    <ComboBox Grid.Row="1" Grid.Column="3" Margin="0,10,0,0"
                              ItemsSource="{Binding CurrencyOptions}"
                              DisplayMemberPath="Name"
                              SelectedItem="{Binding SelectedToCurrency}" />

                    <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,14,0,0">
                        <Button Style="{DynamicResource PrimaryButtonStyle}"
                                Content="{DynamicResource ButtonConvert}"
                                Command="{Binding ConvertCommand}" />
                        <Button Style="{DynamicResource SecondaryButtonStyle}"
                                Content="{DynamicResource ButtonReset}"
                                Command="{Binding ResetCommand}" />
                    </StackPanel>
                </Grid>
            </Border>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="{DynamicResource ErrorBrush}"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyToVisibilityConverter}}" />
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Visibility="{Binding StatusMessage, Converter={StaticResource StringNotEmptyToVisibilityConverter}}" />

            <Border Style="{DynamicResource OutputBoxStyle}">
                <TextBlock Text="{Binding ResultText}" TextWrapping="Wrap" />
            </Border>

            <Border Style="{DynamicResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="{DynamicResource CurrencyRateHeader}" FontWeight="SemiBold" Margin="0,0,0,10" />
                    <DataGrid ItemsSource="{Binding Rates}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              MinHeight="180">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="{DynamicResource LabelCurrencyCode}" Binding="{Binding Code}" IsReadOnly="True" Width="*" />
                            <DataGridTextColumn Header="{DynamicResource LabelCurrencyRate}" Binding="{Binding Rate, StringFormat=0.####}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Style="{DynamicResource PrimaryButtonStyle}"
                                Content="{DynamicResource ButtonSaveRates}"
                                Command="{Binding SaveRatesCommand}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
