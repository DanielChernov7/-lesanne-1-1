<UserControl x:Class="Uni1Tools.Views.UnitConverterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="{DynamicResource PagePadding}">
            <TextBlock Text="{DynamicResource UnitConverterTitle}" Style="{DynamicResource SectionTitleStyle}" />

            <Border Style="{DynamicResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource LabelCategory}" VerticalAlignment="Center" />
                    <ComboBox Grid.Row="0" Grid.Column="1"
                              ItemsSource="{Binding Categories}"
                              DisplayMemberPath="Name"
                              SelectedItem="{Binding SelectedCategory}" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource LabelFrom}" VerticalAlignment="Center" Margin="0,10,0,0" />
                    <ComboBox Grid.Row="1" Grid.Column="1"
                              Margin="0,10,0,0"
                              ItemsSource="{Binding FromUnits}"
                              DisplayMemberPath="Name"
                              SelectedItem="{Binding SelectedFromUnit}" />

                    <TextBlock Grid.Row="1" Grid.Column="2" Text="{DynamicResource LabelTo}" VerticalAlignment="Center" Margin="0,10,0,0" />
                    <ComboBox Grid.Row="1" Grid.Column="3"
                              Margin="0,10,0,0"
                              ItemsSource="{Binding ToUnits}"
                              DisplayMemberPath="Name"
                              SelectedItem="{Binding SelectedToUnit}" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource LabelValue}" VerticalAlignment="Center" Margin="0,10,0,0" />
                    <TextBox Grid.Row="2" Grid.Column="1" Margin="0,10,0,0" Text="{Binding InputValue, UpdateSourceTrigger=PropertyChanged}" />

                    <Button Grid.Row="2" Grid.Column="3" Margin="0,10,0,0" Style="{DynamicResource SecondaryButtonStyle}"
                            Content="{DynamicResource ButtonSwap}"
                            Command="{Binding SwapCommand}" />

                    <StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,14,0,0">
                        <Button Style="{DynamicResource PrimaryButtonStyle}"
                                Content="{DynamicResource ButtonConvert}"
                                Command="{Binding ConvertCommand}" />
                        <Button Style="{DynamicResource SecondaryButtonStyle}"
                                Content="{DynamicResource ButtonReset}"
                                Command="{Binding ResetCommand}" />
                    </StackPanel>
                </Grid>
            </Border>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="{DynamicResource ErrorBrush}"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyToVisibilityConverter}}" />

            <Border Style="{DynamicResource OutputBoxStyle}">
                <TextBlock Text="{Binding ResultText}" TextWrapping="Wrap" />
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
