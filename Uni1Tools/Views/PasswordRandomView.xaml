<UserControl x:Class="Uni1Tools.Views.PasswordRandomView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="{DynamicResource PagePadding}">
            <TextBlock Text="{DynamicResource PasswordRandomTitle}" Style="{DynamicResource SectionTitleStyle}" />

            <Border Style="{DynamicResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="{DynamicResource PasswordSettingsHeader}" FontWeight="SemiBold" Margin="0,0,0,10" />
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="{DynamicResource LabelPasswordLength}" Width="140" VerticalAlignment="Center" />
                        <Slider Minimum="8" Maximum="64" Value="{Binding PasswordLength}" Width="240" />
                        <TextBlock Text="{Binding PasswordLength}" Margin="12,0,0,0" VerticalAlignment="Center" />
                    </StackPanel>

                    <UniformGrid Columns="2" Margin="0,6,0,0">
                        <CheckBox Content="{DynamicResource LabelUppercase}" IsChecked="{Binding IncludeUppercase}" />
                        <CheckBox Content="{DynamicResource LabelLowercase}" IsChecked="{Binding IncludeLowercase}" />
                        <CheckBox Content="{DynamicResource LabelDigits}" IsChecked="{Binding IncludeDigits}" />
                        <CheckBox Content="{DynamicResource LabelSymbols}" IsChecked="{Binding IncludeSymbols}" />
                        <CheckBox Content="{DynamicResource LabelExcludeSimilar}" IsChecked="{Binding ExcludeSimilar}" />
                    </UniformGrid>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Style="{DynamicResource PrimaryButtonStyle}"
                                Content="{DynamicResource ButtonGenerate}"
                                Command="{Binding GeneratePasswordCommand}" />
                        <Button Style="{DynamicResource SecondaryButtonStyle}"
                                Content="{DynamicResource ButtonCopy}"
                                Command="{Binding CopyPasswordCommand}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="{DynamicResource LabelStrength}" FontWeight="SemiBold" Width="120" />
                        <TextBlock Text="{Binding StrengthLabel}" />
                    </StackPanel>

                    <Border Style="{DynamicResource OutputBoxStyle}">
                        <TextBlock Text="{Binding GeneratedPassword}" FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap" />
                    </Border>
                </StackPanel>
            </Border>

            <Border Style="{DynamicResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="{DynamicResource RandomSettingsHeader}" FontWeight="SemiBold" Margin="0,0,0,10" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="160" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource LabelRandomMin}" VerticalAlignment="Center" />
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding RandomMin, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="{DynamicResource LabelRandomMax}" VerticalAlignment="Center" />
                        <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding RandomMax, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource LabelRandomCount}" VerticalAlignment="Center" Margin="0,10,0,0" />
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding RandomCount, UpdateSourceTrigger=PropertyChanged}" Margin="0,10,0,0" />
                        <CheckBox Grid.Row="1" Grid.Column="3" Content="{DynamicResource LabelRandomUnique}" IsChecked="{Binding UniqueNumbers}" Margin="0,10,0,0" />
                    </Grid>

                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <Button Style="{DynamicResource PrimaryButtonStyle}"
                                Content="{DynamicResource ButtonGenerate}"
                                Command="{Binding GenerateRandomCommand}" />
                    </StackPanel>

                    <Border Style="{DynamicResource OutputBoxStyle}">
                        <TextBlock Text="{Binding RandomNumbersOutput}" TextWrapping="Wrap" />
                    </Border>
                </StackPanel>
            </Border>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="{DynamicResource ErrorBrush}"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyToVisibilityConverter}}" />
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Visibility="{Binding StatusMessage, Converter={StaticResource StringNotEmptyToVisibilityConverter}}" />

            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <Button Style="{DynamicResource SecondaryButtonStyle}"
                        Content="{DynamicResource ButtonReset}"
                        Command="{Binding ResetCommand}" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
